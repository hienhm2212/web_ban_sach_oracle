<div class="container-fluid">
    <div class="content-wrapper">
        <div class="item-container">
            <div class="container">
                <div class="col-md-12">
                    <div class="container service1-items col-sm-2 col-md-2 pull-left">
                        <center>
                            <a id="item-1" class="service1-item">
                                <img src="@Html.DisplayFor(model => model.HINHANH)" class="img-responsive" alt="hinh-anh">
                            </a>
                            
                        </center>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="title-sach">@Html.DisplayFor(model => model.TENSACH)</div>
                    <div class="product-desc"></div>
                    <div class="product-rating"><span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span> </div>
                    <hr>
                    <div class="product-price">@Html.DisplayFor(model => model.GIABAN) VNĐ</div>
                    <div class="product-stock">Còn hàng</div>
                    <hr>
                    <div class="btn-group cart">
                        <button type="button" class="btn btn-success">
                            Add to cart
                        </button>
                    </div>
                    <div class="btn-group wishlist">
                        <button type="button" class="btn btn-danger">
                            Add to wishlist
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-md-12 product-info">
                <ul id="myTab" class="nav nav-tabs nav_tabs">

                    <li class="active"><a href="#service-one" data-toggle="tab">THÔNG TIN</a></li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade in active" id="service-one">

                        <section class="container product-info">
                            

                            <h3>@Html.DisplayFor(model => model.TENSACH)</h3>

                            <p>Mô tả: @Html.DisplayFor(model => model.MOTA)</p>
                            <p>Chủ đề: @Html.DisplayFor(model => model.CHUDE.TENCD)</p>
                            <p>Tên tác giả: @Html.DisplayFor(model => model.TACGIA.TENTG)</p>
                            <p>Năm xuất bản: @Html.DisplayFor(model => model.NAMXB)</p>
                            <p>Nhà xuất bản: @Html.DisplayFor(model => model.NXB.TENNXB)</p>
                            
</section>

                    </div>
                    <div class="tab-pane fade" id="service-two">

                        <section class="container"></section>

                    </div>
                    <div class="tab-pane fade" id="service-three">

                    </div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>